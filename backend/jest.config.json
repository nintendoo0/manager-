{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "collectCoverageFrom": [
    "controllers/**/*.js",
    "middleware/**/*.js",
    "routes/**/*.js",
    "!node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true
}
