{
  "name": "defect-manager-backend",
  "version": "1.0.0",
  "description": "Backend для системы управления дефектами на строительных объектах",
  "main": "server.js",  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:unit": "jest tests/unit --forceExit --detectOpenHandles",
    "test:integration": "jest tests/integration --forceExit --detectOpenHandles",
    "test:user-stories": "jest tests/user-stories --forceExit --detectOpenHandles",
    "test:load": "jest tests/load --forceExit --detectOpenHandles --testTimeout=60000",
    "test:all": "jest --forceExit --detectOpenHandles --coverage",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^6.1.5",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "autocannon": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
